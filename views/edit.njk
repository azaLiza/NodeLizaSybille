{% extends "base.njk" %}

{% block title %}Todolist - Modifier{% endblock %}
{% block navbar_title %}Modifier '{{ todo.label }}'{% endblock %}

{#Formulaire permettant de modifier une tâche#}
{% block content %}
  <div class="col-md-6 offset-md-3">
    <div class="card card-outline-primary mb-3 text-center">
      <div class="card-block">
        <blockquote class="card-blockquote">
          <center>
            <form action="/todo/edit/{{ todo._id }}" method="post">
              <div class="form-group">
                <label for="inputLabel">Nom de la tâche :</label>
                <input type="text" class="form-control" id="inputLabel" name="inputLabel" value="{{ todo.label }}" autofocus required>
              </div>
              <div class="form-group">
                <label for="inputDateBegin" class="">Début de la tâche :</label>
                <input type="text" class="form-control" id="inputDateBegin" name="inputDateBegin" value="{{ todo.dateBegin }}" required>
              </div>
              <div class="form-group">
                <label for="inputDateEnd" class="">Fin de la tâche :</label>
                <input class="form-control" type="text" id="inputDateEnd" name="inputDateEnd" value="{{ todo.dateEnd }}">
              </div>
              <div class="form-group">
              <label for="inputPriority" class="">Priorité de la tâche:</label>
              <input type="range" id="inputPriority" name="inputPriority" min="0" max="10">
            </div>
            <div class="form-group">
              <label for="inputUser" class="">Utilisateur responsable de la tâche
              <select name="inputUser" id="inputUser" class="form-control">
                <option value="Aucun">Aucun</option>
                {% for user in users %}
                  <option value='{{user._id}}'>{{user.login}}</option>
                {% endfor %}
              </select>
            </div>
              <button type="submit" class="btn btn-success">Modifier '{{ todo.label }}'</button>
            </form>

            <br />
            <a class="btn btn-primary" href="/todo" role="button">Retour</a>
          </center>
        </blockquote>
      </div>
    </div>
  </div>
{% endblock %}
